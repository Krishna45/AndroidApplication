<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    >
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter the received OTP below"
                android:textColor="#ffffff"
                android:layout_marginHorizontal="20dp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:fontFamily="@font/cormorant_upright_medium"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:layout_marginHorizontal="20dp"
                android:hint="OTP (4 characters)"
                android:padding="5dp"
                android:layout_marginTop="25dp"
                android:textSize="15sp"
                android:inputType="number"
                android:maxLength="10"
                android:typeface="serif"
                android:id="@+id/otp"
                android:textColor="#000000"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:layout_marginHorizontal="20dp"
                android:hint="New Password (Minimum 5 Characters)"
                android:padding="5dp"
                android:layout_marginTop="25dp"
                android:textSize="15sp"
                android:inputType="textPassword"
                android:maxLength="10"
                android:typeface="serif"
                android:id="@+id/new_password"
                android:textColor="#000000"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:layout_marginHorizontal="20dp"
                android:hint="Confirm Password"
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:inputType="textPassword"
                android:typeface="serif"
                android:id="@+id/confirm_new_password"
                android:textColor="#000000"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/redShade"
                android:textColor="#FFFFFF"
                android:id="@+id/button_next_confirm"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>