<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".activity.RestaurantDetails">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:background="@color/orange"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/toolbar"
        android:id="@+id/content">
    <TextView
        android:layout_width="135dp"
        android:layout_height="match_parent"
        android:text="Ordering From : "
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="@font/comfortaa"
        android:background="#ffffff"
        android:id="@+id/displayText"
        />
        <TextView
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:text="Text"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/displayText"
            android:textColor="@color/redShade"
            android:fontFamily="@font/comfortaa"
            android:background="#ffffff"
            android:textStyle="bold"
            android:id="@+id/displayRestaurant"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/orange"
        android:layout_margin="4dp"
        android:id="@+id/displayLine"
        android:layout_below="@+id/content"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerItems"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="#ffffff"
        android:layout_below="@+id/displayLine"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="Place Order"
        android:background="@color/orange"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:fontFamily="@font/comfortaa"
        android:id="@+id/placeOrder"
        />
</RelativeLayout>